library
  exposed-modules:     Lambda
                     , OrderedSet
                     , Compile
  build-depends:       base >=4.11 && <5
                     , containers
                     , grin
                     , lens
                     , mtl
                     , bound
                     , deriving-compat
                     , transformers >=0.5
  hs-source-dirs:      src
  ghc-options:         -Wall
  default-language:    Haskell2010

test-suite leeft-tests
  type:                exitcode-stdio-1.0
  main-is:             Main.hs
  build-depends:       base >=4.11 && <5
                     , leeft
                     , bound
                     , hedgehog
                     , mtl
                     , transformers >=0.5
  hs-source-dirs:      test
  default-language:    Haskell2010
